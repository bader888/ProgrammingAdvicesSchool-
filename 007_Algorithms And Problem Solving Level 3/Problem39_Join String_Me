
Console.WriteLine(joinString(new List<string> { "saleem", "Adham", "Kassab" }, "&"));

static string joinString(List<string> lst, string delimiter)
{
    string result = "";
    for (int i = 0; i < lst.Count; i++)
    {
        if (i == lst.Count - 1)
            result += lst[i];
        else
            result += lst[i] + delimiter;
    }

    return result;
}
