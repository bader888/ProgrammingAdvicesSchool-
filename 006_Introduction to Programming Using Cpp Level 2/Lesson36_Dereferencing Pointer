using System;
using System.Collections.Generic;
using System.Linq;

namespace lab
{
    class Program
    {
        static void Main(string[] args)
        {
            unsafe
            {
                int a = 20;
                int* ptr = &a;
                *ptr = 5;
                
                Console.WriteLine((int)&a);
                Console.WriteLine(a);
                
            }           
        }
    }
}
